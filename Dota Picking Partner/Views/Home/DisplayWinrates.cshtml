@model CombinedHeroCounters
<html data-bs-theme="dark">
<head>
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="~/css/IndexStyle.css">
</head>
<body>
<div class="container-fluid">

	
<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>Hero</th>
			<th> </th>
			<th>Winrate Against Given Team</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.combinedHeroCounters.OrderByDescending(x => x.Value)){
			<tr>
				<td><b>@item.Key</b></td>
				<td><img src="~/css/DotaHeroIcons/@(item.Key).png" class="rounded mx-auto d-block" width="128" height="72"></td>
				<td>@item.Value %</td>
			</tr>
		}
	</tbody>
</table>
</div>
</body>
</html>